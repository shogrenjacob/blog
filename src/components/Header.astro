---
import HeaderLink from './HeaderLink.astro';
import Button from './Button.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>

		<HeaderLink href="#" class="header-link">Media</HeaderLink>
		<HeaderLink href="/" class="header-link">Sports</HeaderLink>
		<HeaderLink href="/" class="header-link">Videogames</HeaderLink>
		<HeaderLink href="/" class="header-link">Computing</HeaderLink>
		<HeaderLink href="/" class="header-link">Life</HeaderLink>

		<Button fn="changeme()" text="Feelin' Lucky" size="18"/>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
	}
	h2 {
		margin: 0;
		padding: 0;
		font-size: 30px;
		font-weight: 100;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		font-weight: inherit; 
	}

	nav a,
	nav a.active {
		font-weight: 100; 
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		border-bottom: 1px solid;
		padding-left: 20px;
		padding-right: 20px;
	}
	nav a {
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a:hover {
		color: var(--accent);
		border-bottom: solid 3px;
	}

	/* FIXME */
	nav a:active {
		color: var(--accent);
		border-bottom: solid 3px;
	}

	nav h2 a:hover {
		color: var(--black);
		border: none;
	}
	.social-links,
	.social-links a {
		display: flex;
	}

	.header-link {
		font-size: 18px;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
